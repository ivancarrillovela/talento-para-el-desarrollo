---
import { reader } from "../../utils/keystatic";

const data = await reader.singletons.hero.read();

if (!data) return null;

const {
  titulo,
  subtitulo,
  descripcion,
  textoBoton,
  imagen,

  textoBotonSecundario = "Cómo colaborar",
  badgeTitulo = "Numerosas becas",
  badgeDesc = "Otorgadas en el último año.",
} = data;
---

<section
  class="relative w-full min-h-[95vh] bg-zinc-50 flex items-center overflow-hidden"
>
  <div
    class="container mx-auto px-6 lg:px-12 relative z-10 pt-32 pb-12 lg:pt-20"
  >
    <div class="flex flex-col lg:flex-row items-center gap-16 lg:gap-24">
      <div class="w-full lg:w-1/2 space-y-8">
        <div class="flex items-center gap-3">
          <span class="w-12 h-[1px] bg-terracotta-500"></span>
          <span
            class="text-terracotta-500 text-sm font-bold tracking-widest uppercase"
          >
            Inversión en Talento
          </span>
        </div>

        <h1
          class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-zinc-900 leading-[0.95] tracking-tighter"
        >
          {titulo}
          <br />
          <span class="italic font-serif text-terracotta-500">{subtitulo}</span>
        </h1>

        {/* Mobile Image (Between Title and Desc) */}
        <div
          class="block lg:hidden w-full h-[40vh] relative rounded-sm overflow-hidden my-6"
        >
          <div
            class="absolute top-4 right-4 w-full h-full bg-terracotta-100 z-0"
          >
          </div>
          <img
            src={imagen || "/images/no_image.jpg"}
            alt={titulo}
            class="relative z-10 w-full h-full object-cover shadow-lg filter sepia-[10%] contrast-[105%]"
            onerror="this.onerror=null;this.src='/images/no_image.jpg';"
          />
        </div>

        <p
          class="text-xl text-zinc-600 max-w-lg leading-relaxed font-light border-l-2 border-zinc-200 pl-6"
        >
          {descripcion}
        </p>

        <div class="flex items-center gap-3 md:gap-5 pt-6">
          <a
            href="#nuestro-trabajo"
            class="px-6 py-3 md:px-8 md:py-4 bg-zinc-900 text-white text-base md:text-lg font-medium rounded-sm hover:bg-terracotta-500 transition-colors duration-300 shadow-xl shadow-zinc-200 whitespace-nowrap"
          >
            {textoBoton}
          </a>
          <a
            href="#contacto"
            class="group flex items-center gap-2 px-3 py-3 md:px-6 md:py-4 text-zinc-900 text-base md:text-lg font-medium hover:text-terracotta-500 transition-colors duration-300 whitespace-nowrap"
          >
            {textoBotonSecundario}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-4 h-4 md:w-5 md:h-5 group-hover:translate-x-2 transition-transform"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <div
        class="hidden lg:block w-full lg:w-1/2 relative h-[60vh] lg:h-[80vh]"
      >
        <div
          class="absolute top-10 right-10 w-full h-full bg-terracotta-100 z-0"
        >
        </div>
        <img
          src={imagen || "/images/no_image.jpg"}
          alt={titulo}
          class="relative z-10 w-full h-full object-cover shadow-2xl filter sepia-[10%] contrast-[105%]"
          onerror="this.onerror=null;this.src='/images/no_image.jpg';"
        />
        <div
          class="absolute bottom-10 -left-10 z-20 bg-white p-6 shadow-xl max-w-xs hidden md:block border-l-4 border-terracotta-500"
        >
          <p class="text-zinc-500 text-xs uppercase tracking-wider mb-1">
            Impacto Real
          </p>
          <p class="text-2xl font-bold text-zinc-900">{badgeTitulo}</p>
          <p class="text-sm text-zinc-400 mt-1">{badgeDesc}</p>
        </div>
      </div>
    </div>
  </div>
</section>
