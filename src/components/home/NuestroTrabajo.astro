---
import { getCollection } from "astro:content";
import { reader } from "../../utils/keystatic";
import { formatDate } from "../../utils/date";
import ProjectCard from "../proyectos/ProjectCard.astro";

// 1. Datos de la Intro (Singleton)
const introData = await reader.singletons.nuestroTrabajoIntro.read();

// 2. Datos de los Proyectos (Colección)
const proyectosRaw = await getCollection("proyectos");
const proyectos = proyectosRaw
  .sort((a, b) => b.data.fecha.valueOf() - a.data.fecha.valueOf())
  .slice(0, 6);

// Valores por defecto
const titulo = introData?.titulo || "Proyectos que transforman.";
const descripcion =
  introData?.descripcion ||
  "Iniciativas concretas donde aplicamos nuestra metodología para generar un cambio real y sostenible.";

if (!proyectos || proyectos.length === 0) return null;
---

<section
  id="nuestro-trabajo"
  class="bg-zinc-50 py-16 md:py-24 text-zinc-900 border-b border-zinc-200"
>
  <div class="container mx-auto px-6 lg:px-12">
    <div
      class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16"
    >
      <div class="max-w-2xl">
        <h2
          class="text-terracotta-500 font-bold tracking-widest uppercase text-sm mb-2"
        >
          Nuestro Trabajo
        </h2>
        <h3 class="text-4xl md:text-5xl font-bold mb-6">{titulo}</h3>
        <p class="text-zinc-600 text-lg leading-relaxed max-w-xl">
          {descripcion}
        </p>
      </div>

      <div class="hidden md:block">
        <a
          href="/proyectos"
          class="group inline-flex items-center gap-2 text-zinc-900 font-bold hover:text-terracotta-500 transition-colors"
        >
          Ver todas las iniciativas
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
          </svg>
        </a>
      </div>
    </div>

    {/* Mobile Scroll Indicator */}
    <div
      class="flex justify-end md:hidden mb-2 items-center gap-1 text-zinc-400 px-6"
    >
      <span class="text-xs font-bold uppercase tracking-widest">Desliza</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        class="w-4 h-4 animate-pulse"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
      </svg>
    </div>

    <div
      class="flex overflow-x-auto snap-x snap-mandatory gap-6 pb-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-8 md:pb-0 -mx-6 px-6 md:mx-0 md:px-0 scrollbar-hide items-stretch md:overflow-visible"
    >
      {
        proyectos.map((proyecto, index) => (
          <ProjectCard
            proyecto={proyecto}
            index={index}
            class="min-w-[85vw] md:min-w-0 snap-center h-full border border-zinc-100 md:border-none"
          />
        ))
      }
    </div>
  </div>
</section>
