---
import { createReader } from "@keystatic/core/reader";
import keystaticConfig from "../../keystatic.config";

const reader = createReader(process.cwd(), keystaticConfig);
const global = await reader.singletons.global.read();
const year = new Date().getFullYear();
---

<footer
  class="hidden md:block bg-zinc-900 text-zinc-400 py-12 border-t border-zinc-800"
>
  <div
    class="container mx-auto px-6 lg:px-12 flex flex-col md:flex-row justify-between items-center gap-8"
  >
    <div class="text-center md:text-left">
      <h4 class="text-white font-bold text-xl mb-2">
        {global?.nombreSitio || "Talento para el Desarrollo"}
      </h4>
      <p class="text-sm max-w-xs mx-auto md:mx-0">
        Construyendo puentes de oportunidad y desarrollo profesional.
      </p>
    </div>

    <div class="flex gap-6">
      <a href="#" class="hover:text-white transition-colors">Aviso Legal</a>
      <a href="#" class="hover:text-white transition-colors">Privacidad</a>
      {
        global?.redes?.linkedin && (
          <a href={global.redes.linkedin} class="hover:text-white">
            LinkedIn
          </a>
        )
      }
    </div>

    <div class="text-sm text-zinc-600">
      &copy; {year}
      {global?.footerTexto || "Todos los derechos reservados."}
    </div>
  </div>
</footer>
