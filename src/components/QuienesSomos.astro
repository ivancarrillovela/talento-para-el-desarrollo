---
// src/components/QuienesSomos.astro
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../keystatic.config';

const reader = createReader(process.cwd(), keystaticConfig);
const data = await reader.singletons.quienesSomos.read();

const titulo = data?.titulo || "Nuestra Historia";
const descripcion = data?.descripcion || "Somos una organizaci칩n nacida de la convicci칩n de que el talento est치 universalmente distribuido, pero las oportunidades no.";
const imagen = data?.imagen || ""; // Idealmente poner una por defecto
const stats = data?.stats || { 
    stat1_numero: "+5", stat1_label: "A침os de experiencia",
    stat2_numero: "150", stat2_label: "Voluntarios",
    stat3_numero: "2k", stat3_label: "Vidas impactadas"
};
---

<section id="quienes-somos" class="py-24 bg-white overflow-hidden">
  <div class="container mx-auto px-6 lg:px-12">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      
      <div class="w-full lg:w-1/2 relative">
        <div class="absolute -top-4 -left-4 w-24 h-24 bg-terracotta-100 rounded-full z-0"></div>
        <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-zinc-100 rounded-full z-0"></div>
        {imagen && (
            <img src={imagen} alt="Equipo" class="relative z-10 w-full h-[500px] object-cover rounded-lg shadow-2xl grayscale hover:grayscale-0 transition-all duration-700" />
        )}
      </div>

      <div class="w-full lg:w-1/2 space-y-8">
        <h2 class="text-terracotta-500 font-bold tracking-widest uppercase text-sm">Sobre Nosotros</h2>
        <h3 class="text-4xl lg:text-5xl font-bold text-zinc-900">{titulo}</h3>
        <p class="text-lg text-zinc-600 leading-relaxed">
          {descripcion}
        </p>

        <div class="grid grid-cols-3 gap-8 pt-8 border-t border-zinc-100">
            <div class="text-center lg:text-left">
                <p class="text-3xl font-bold text-zinc-900">{stats.stat1_numero}</p>
                <p class="text-sm text-zinc-500 uppercase tracking-wide mt-1">{stats.stat1_label}</p>
            </div>
            <div class="text-center lg:text-left">
                <p class="text-3xl font-bold text-zinc-900">{stats.stat2_numero}</p>
                <p class="text-sm text-zinc-500 uppercase tracking-wide mt-1">{stats.stat2_label}</p>
            </div>
            <div class="text-center lg:text-left">
                <p class="text-3xl font-bold text-zinc-900">{stats.stat3_numero}</p>
                <p class="text-sm text-zinc-500 uppercase tracking-wide mt-1">{stats.stat3_label}</p>
            </div>
        </div>
      </div>

    </div>
  </div>
</section>