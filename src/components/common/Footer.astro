---
import { reader } from "../../utils/keystatic";

import { SITE_INFO, FOOTER_LINKS } from "../../constants";

interface Props {
  variant?: "default" | "mobile";
}

const { variant = "default" } = Astro.props;
const isMobile = variant === "mobile";

const global = await reader.singletons.global.read();
const year = new Date().getFullYear();
---

<footer
  class={isMobile
    ? "mt-auto border-t border-zinc-100 pt-6"
    : "hidden md:block bg-zinc-900 text-zinc-400 py-12 border-t border-zinc-800"}
>
  <div
    class={isMobile
      ? "flex flex-col"
      : "container mx-auto px-6 lg:px-12 grid grid-cols-3 items-center gap-8"}
  >
    {/* Sección de marca */}
    <div class={isMobile ? "" : "text-left"}>
      <h4
        class={isMobile
          ? "text-zinc-900 font-bold text-lg mb-1"
          : "text-white font-bold text-xl mb-2"}
      >
        {global?.nombreSitio || SITE_INFO.name}
      </h4>
      <p class={isMobile ? "text-sm text-zinc-400 mb-4" : "text-sm max-w-xs"}>
        Construyendo puentes de oportunidad y desarrollo profesional.
      </p>
    </div>

    {/* Copyright - Centro */}
    <div
      class={isMobile
        ? "text-xs text-zinc-400 mt-8 order-last"
        : "text-sm text-zinc-600 text-center"}
    >
      &copy; {year}
      {
        global?.nombreSitio + ". " + global?.footerTexto ||
          "Todos los derechos reservados."
      }
    </div>

    {/* Sección de enlaces y redes - Derecha */}
    <div
      class={isMobile
        ? "flex flex-col gap-4 text-sm text-zinc-500"
        : "flex flex-col items-end gap-4 text-sm"}
    >
      <div
        class={isMobile
          ? "flex flex-wrap gap-x-5 gap-y-2"
          : "flex flex-wrap justify-end gap-6"}
      >
        {
          FOOTER_LINKS.map((link) => (
            <a
              href={link.href}
              class={
                isMobile
                  ? "hover:text-zinc-900 transition-colors"
                  : "group relative hover:text-white transition-colors py-1"
              }
            >
              {link.label}
              {!isMobile && (
                <span class="absolute bottom-0 left-0 w-full h-0.5 bg-terracotta-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left" />
              )}
            </a>
          ))
        }
      </div>

      <div class="flex gap-4">
        {
          global?.redes?.webExterna && (
            <a
              href={global.redes.webExterna}
              target="_blank"
              rel="noopener noreferrer"
              class={
                isMobile
                  ? "hover:text-zinc-900 transition-colors"
                  : "group relative hover:text-white transition-colors py-1"
              }
              aria-label="Web Externa"
            >
              <svg
                class="w-5 h-5 md:w-5 md:h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                />
              </svg>
            </a>
          )
        }
        {
          global?.redes?.linkedin && (
            <a
              href={global.redes.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class={
                isMobile
                  ? "hover:text-zinc-900 transition-colors"
                  : "group relative hover:text-white transition-colors py-1"
              }
              aria-label="LinkedIn"
            >
              <svg
                class="w-5 h-5 md:w-5 md:h-5"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
            </a>
          )
        }

        {
          global?.redes?.instagram && (
            <a
              href={global.redes.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class={
                isMobile
                  ? "hover:text-zinc-900 transition-colors"
                  : "group relative hover:text-white transition-colors py-1"
              }
              aria-label="Instagram"
            >
              <svg
                class="w-5 h-5 md:w-5 md:h-5"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.069-4.85.069-3.204 0-3.584-.012-4.849-.069-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
              </svg>
            </a>
          )
        }

        {
          global?.redes?.twitter && (
            <a
              href={global.redes.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class={
                isMobile
                  ? "hover:text-zinc-900 transition-colors"
                  : "group relative hover:text-white transition-colors py-1"
              }
              aria-label="Twitter / X"
            >
              <svg
                class="w-5 h-5 md:w-5 md:h-5"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
              </svg>
            </a>
          )
        }
      </div>
    </div>
  </div>
</footer>
